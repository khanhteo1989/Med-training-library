/* Hiệu ứng chạy cho dòng chữ */
@keyframes scrollText {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

/* Hiệu ứng nhấp nháy */
@keyframes blinkText {
  0%, 50%, 100% {
    opacity: 1;
  }
  25%, 75% {
    opacity: 0;
  }
}

/* Áp dụng hiệu ứng vào dòng chữ */
.scroll-text {
  font-size: 24px;
  font-weight: bold;
  color: #ffffff;
  background: linear-gradient(90deg, cornflowerblue, #ff7f50);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: scrollText 10s linear infinite, blinkText 1.5s step-end infinite;
  white-space: nowrap;
  overflow: hidden;
  display: inline-block;
  padding-left: 100%;
  text-align: center;
}
